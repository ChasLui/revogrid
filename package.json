{
  "name": "@revolist/revogrid",
  "version": "4.0.0",
  "description": "Virtual reactive data grid spreadsheet component - RevoGrid.",
  "license": "MIT",
  "author": "revolist",
  "homepage": "https://github.com/revolist/revogrid#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/revolist/revogrid.git"
  },
  "bugs": {
    "url": "https://github.com/revolist/revogrid/issues"
  },
  "keywords": [
    "revo-grid",
    "revolist",
    "csv",
    "datagrid",
    "datalist",
    "datamanager",
    "editable",
    "excel",
    "excel-grid",
    "export",
    "fast-grid",
    "filtering",
    "grid",
    "grouping",
    "infinity-grid",
    "reactive",
    "spreadsheet",
    "stenciljs",
    "storybook",
    "treeview",
    "virtualgrid",
    "virtual",
    "virtuallist",
    "virtual-scroll",

    "vue",
    "vue-grid",
    "vue-datagrid",
    "vue3",
    "vue3-datagrid",

    "react",
    "react-grid",
    "react-datagrid",

    "svelte",
    "svelte-grid",
    "svelte-datagrid",

    "angular",
    "angular-grid",
    "angular-datagrid",
    "angular-tree"
  ],

  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "unpkg": "dist/revo-grid/revo-grid.esm.js",
  
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",

  "types": "dist/types/index.d.ts",

  "exports": {
    ".": {
      "import": "./dist/revo-grid/revo-grid.esm.js",
      "require": "./dist/revo-grid/revo-grid.cjs.js",
      "types": "./dist/types/index.d.ts"
    },
    "./standalone": {
      "import": "./dist/components/revo-grid.js",
      "types": "./dist/components/revo-grid.d.ts"
    },
    "./loader": {
      "import": "./loader/index.js",
      "require": "./loader/index.cjs",
      "types": "./loader/index.d.ts"
    }
  },

  "files": [
    "dist/",
    "loader/",
    "hydrate/"
  ],
  "scripts": {
    "build": "stencil build --prod",
    "readme": "./readme/generate_readme.sh",
    "copy:type": "cp -r dist/types/* dist/collection",
    "build:demo": "cd ./demo/ && rm -rf node_modules && npm i && npm run build",
    "serve": "stencil build --dev --watch --serve",
    "deploy": "git submodule update && npm run build:demo && gh-pages -d ./demo/src/.vuepress/dist",
    "prettier": "npx prettier --write ./src"
  },
  "devDependencies": {
    "@angular/core": "^17.3.5",
    "@juggle/resize-observer": "^3.4.0",
    "@revolist/stencil-vue2-output-target": "^0.0.3",
    "@stencil/angular-output-target": "0.8.4",
    "@stencil/react-output-target": "0.5.3",
    "@stencil/sass": "^3.0.11",
    "@stencil/store": "^2.0.15",
    "@stencil/svelte-output-target": "0.0.3",
    "@stencil/vue-output-target": "^0.8.8",
    "@types/events": "^3.0.3",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.0",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@types/resize-observer-browser": "^0.1.11",
    "gh-pages": "^6.1.1",
    "jest": "26.0.1",
    "jest-cli": "26.0.1",
    "prettier": "3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rxjs": "^7.8.1",
    "svelte": "^4.2.15",
    "vue": "^3.4.23",
    "bootstrap": "^5.3.2",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@stencil/core": "^4.17.1",
    "lodash": "^4.17.21"
  },
  "publishConfig": {
    "access": "public"
  }
}
